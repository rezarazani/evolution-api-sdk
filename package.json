{
    "name": "evolution-api-sdk",
    "version": "1.0.0",
    "description": "TypeScript SDK for evolution-api",
    "main": "index.js",
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc -w",
        "prepublishOnly": "bun run build",
        "prepare": "husky",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "lint:staged": "lint-staged",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\"",
        "type-check": "tsc --noEmit",
        "test": "bun test",
        "test:watch": "bun test --watch",
        "test:coverage": "bun test --coverage",
        "dev": "bun run src/index.ts"
    },
    "author": "Reza Razani",
    "license": "ISC",
    "devDependencies": {
        "@types/bun": "^1.2.23",
        "@types/node": "^24.7.0",
        "@typescript-eslint/eslint-plugin": "^8.46.0",
        "@typescript-eslint/parser": "^8.46.0",
        "eslint": "^9.37.0",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-security": "^3.0.1",
        "globals": "^16.4.0",
        "husky": "^9.1.7",
        "jiti": "^2.6.1",
        "lint-staged": "^16.2.3",
        "prettier": "3.6.2",
        "typescript-eslint": "^8.46.0"
    },
    "lint-staged": {
        "*.ts": [
            "prettier --write",
            "eslint --fix",
            "bun run type-check"
        ],
        "*.{json,md,yml,yaml}": [
            "prettier --write"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rezarazani/evolution-api-sdk.git"
    },
    "bugs": {
        "url": "https://github.com/rezarazani/evolution-api-sdk/issues"
    },
    "homepage": "https://github.com/rezarazani/evolution-api-sdk#readme"
}
