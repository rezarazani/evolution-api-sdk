{
    "name": "evolution-api-sdk",
    "version": "1.0.0",
    "description": "TypeScript SDK for evolution-api",
    "main": "index.js",
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc -w",
        "prepublishOnly": "bun run build",
        "prepare": "husky",
        "lint:staged": "lint-staged",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\"",
        "type-check": "tsc --noEmit",
        "test": "bun test",
        "test:watch": "bun test --watch",
        "test:coverage": "bun test --coverage",
        "dev": "bun run src/index.ts"
    },
    "keywords": [
        "whatsapp",
        "api",
        "sdk",
        "typescript",
        "evolution-api",
        "evolution",
        "messaging"
    ],
    "author": "Reza Razani",
    "license": "ISC",
    "devDependencies": {
        "@types/bun": "^1.2.23",
        "@types/node": "^24.7.0",
        "globals": "^16.4.0",
        "husky": "^9.1.7",
        "jiti": "^2.6.1",
        "lint-staged": "^16.2.3",
        "prettier": "3.6.2"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    },
    "lint-staged": {
        "*.ts": [
            "prettier --write",
            "bun run type-check"
        ],
        "*.{json,md,yml,yaml}": [
            "prettier --write"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rezarazani/evolution-api-sdk.git"
    },
    "bugs": {
        "url": "https://github.com/rezarazani/evolution-api-sdk/issues"
    },
    "homepage": "https://github.com/rezarazani/evolution-api-sdk#readme"
}
